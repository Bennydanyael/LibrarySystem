@model IEnumerable<LibrarySystem.Models.LibrarySystemRun>

@{
    ViewData["Title"] = "Library";
}

<h1>Library System</h1>

<p>
    <a asp-action="Create">New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateBack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthBorrowed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Persons.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bookis.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateBack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthBorrowed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.LibraryID">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.LibraryID">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.LibraryID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
