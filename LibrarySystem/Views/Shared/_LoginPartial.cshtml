@using Microsoft.AspNetCore.Identity
@using LibrarySystem.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="Areas/Account/Manage/Index" asp-route-returnUrl="@Url.Action("Index", "LibrarySystemRuns", new { area = ""})" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="LibrarySystemRuns" asp-action="Index">Library</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Persons" asp-action="Index">Persons</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="Index">Authors</a>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/LibrarySystemRuns/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register"> Register </a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login"> Log in </a></li>
    </ul>
}
