<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library.App.Mobile.Views.AuthorDetailPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Author Id :" FontSize="Medium" />
            <Label Text="{Binding AuthorID}" FontSize="Small"/>
            <Label Text="Author Name :" FontSize="Medium" />
            <Label Text="{Binding AuthorName}" FontSize="Small"/>
            <Label Text="Author:" FontSize="Medium" />
            <Label Text="{Binding Biography}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>